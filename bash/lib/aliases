sync_status() {
	printf "Syncing..."
	if sync; then
		echo "OK"
	else
		return $?
	fi
}

# Sudo
alias sudo="doas "
alias doas="doas "

# Ls
alias ls="ls -F --color=yes"
alias sl="ls"
alias l="ls -l"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias ns="ls -t"
alias nsl="ls -lt"
alias s="ls -sh"

# Editors
alias v="nvim"
alias n="nvim"
alias sv="sudo nvim"
alias svim="sudo nvim"
alias vv="nvim -S Session.vim"

# Programming
alias cl="clisp"
alias rsbcl="rlwrap sbcl"

# Tr
alias s2n='tr " " "\n"'
alias n2s='tr "\n" " "'

# Shorthands
alias ..="cd .."
alias chez="chezscheme"
alias clr='grim -g "$(slurp -p)" -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:-'
alias cmd="WINEDEBUG=-all wine cmd"
alias cpr="cp -r"
alias filter="grep -v"
alias g="git"
alias h="htop -C"
alias mak="make"
alias R="less -XR"
alias rmr="rm -r"
alias tcli="transmission-cli"
alias uc="cp -u"
alias umount="sync_status && umount"
alias w1="watch -n 1 "
alias vim="nvim"

