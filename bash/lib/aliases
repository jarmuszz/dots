sync_status() {
	printf "Syncing..."
	if sync; then
		echo "OK"
	else
		return $?
	fi
}

# Sudo
alias sudo="doas "
alias doas="doas "

# Ls
alias ls="ls -F --color=yes"
alias sl="ls"
alias l="ls -l"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias ns="ls -t"
alias nsl="ls -lt"
alias s="ls -sh"

# Editors
alias e="emacs -nw"
alias se="sudo emacs -nw"
alias v="nvim"
alias n="nvim"
alias sv="sudo nvim"
alias vv="nvim -S Session.vim"

# Programming
alias cl="clisp"
alias rsbcl="rlwrap sbcl"

# Tr
alias s2n='tr " " "\n"'
alias n2s='tr "\n" " "'

# Shorthands
alias ..="cd .."
alias cmd="WINEDEBUG=-all wine cmd"
alias filter="grep -v"
alias h="htop -C"
alias mak="make"
alias R="less -R"
alias rmr="rm -r"
alias ssr="sudo service"
alias tcli="transmission-cli"
alias uc="cp -u"
alias umount="sync_status && umount"
alias vim="nvim"

# vim: filetype=sh

