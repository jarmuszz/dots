#!/bin/sh

LIGHT="rose-pine-dawn"
DARK="rose-pine"
LAST=/tmp/pywaltheme

[ ! -e "/$LAST" ] && echo l > $LAST

post() {
	. ~/.cache/wal/colors.sh

	# Restart CWM
	pkill -f -SIGHUP cwm

	# Restart xterm bar
	pkill -f xtbar
	xtbar &
}

case "$1" in
	l)
		wal -f "$LIGHT"
		echo d > /tmp/pywaltheme
		;;
	d)
		wal -f "$DARK"
		echo l > /tmp/pywaltheme
		;;
	c)
		$0 "$(cat /tmp/pywaltheme)"
		exit
		;;
	r)
		if [ "$(cat /tmp/pywaltheme)" != "d" ]; then
			$0 d
		else
			$0 l
		fi
		exit
		exit
		;;
	*)
		echo "$0: l|d|c|r" >/dev/stderr
esac
post
